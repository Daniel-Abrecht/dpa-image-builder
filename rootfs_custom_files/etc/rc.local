#!/bin/sh

set -x

# install remaining packages
apt-get --no-download update
apt-get --no-download -y install $(cat /root/packages_to_install)
dpkg-reconfigure locales

# set root password
passwd

# clean apt cache
#apt-get clean

# Remove one time script
set +x
rm /etc/rc.local
cat >/etc/rc.local <<EOF
#!/bin/sh
exit 0
EOF
exit 0
